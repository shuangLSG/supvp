
.custom-page-nav{
    border-bottom:1px solid #eee;
}
.custom-icon-wrapper img{
    width: 0.48rem;
    height: 0.48rem;
}
.mui-bar-nav.mui-bar .mui-icon{
    padding-right: 0.44rem;
}
.mui-bar-nav.mui-bar .mui-icon.custom-icon-wrapper{
    padding-top: 0.38rem;
}
.mui-action-back img{
    width: 0.48rem;
    margin-top: 0.1rem;
}
.custom-nav.custom-flex {
    position: fixed;
    top: 1.2rem;
    z-index: 3;
    width: 100%;
    height: 1.1rem;
    justify-content: space-around;
    border-bottom: 1px solid #ebebeb;
}
.mui-bar-nav~.mui-content {
    padding-top: 2.3rem !important;
}
.mui-bar-nav~.mui-content .mui-pull-top-pocket {
    top: 2.25rem;
}

.custom-nav a{
    padding-top: 0.3rem;
}
.custom-nav a.custom-tab-item.active span {
    color: #FF7E00;
}

.custom-nav a>span {
    position: relative;
    font-size: 0.373rem;
    color: #888;
    padding: 0 0.4rem;
}

.custom-nav a>span {
    display: block;
}

.custom-nav a>span .triangle-wrapper {
    overflow: hidden;
}

.custom-nav a img {
    width: 0.426rem;
    margin: 4% 0.4rem 0;
}
/* 三角 */

.triangle-up,
.triangle-down {
    position: absolute;
    right: 0.1rem;
    width: 0;
    height: 0;
    border-left: 3px solid transparent;
    border-right: 3px solid transparent;
}

.triangle-up {
    bottom: 0.12rem;
    border-top: 5px solid #999;
}

.custom-tab-item.active .triangle-up.active {
    border-top: 5px solid #FF7E00;
}

.triangle-down {
    top: 0.12rem;
    border-bottom: 5px solid #999;
}

.custom-tab-item.active .triangle-down.active {
    border-bottom: 5px solid #FF7E00;
}


/*** 模式一 ***/


.mode1-box .custom-gray{
    margin-top:0.2rem;
    margin-bottom: 0.02rem;
}

.mode2-box .custom-brand-info .badges-box{
    padding:0 !important;
}
.mode-2 .custom-cell .custom-cell-content .pos-bottom{
    position: absolute;
    bottom: 0;
    right: 0.26rem;
    left: 0.34rem;
}
.mode2-box img.custom-list-pic{
    width: 2.8rem;
    height: 2.8rem;
}
.mode2-box .custom-list-box .custom-brand-info h3 {
    line-height: 1.5;
}
