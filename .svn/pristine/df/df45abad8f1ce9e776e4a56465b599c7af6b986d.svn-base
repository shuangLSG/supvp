html,
body {
    height: 100%;
}

a:active {
    color: #fff;
}
input::-webkit-input-placeholder {
    color: #A1A7B9;
}
.position-c {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
}
.font-gray{
    color:#999999;
}
.font-gray2{
    color:#A1A7B9;
}
.font-blue{
    color:#308BF1;
}
.text-size-16{
    font-size: 0.426rem ; 
}
.text-size-12{ 
    font-size: 0.32rem;
}
.mui-content{
    background-color: #FFF;
}
.main-content {
    padding: 0.4rem 0.98rem;
}

.input-group {
    position: relative;
    line-height: 1.1rem;
    margin-bottom: 0.38rem;
    border-bottom: 1px solid #eee;
}
.input-group input {
    width: 66%;
    height: 1rem;
    padding: 0 0.5rem;
    padding-left: 0;
    margin-bottom: 0;
    font-size: 0.414rem;
    letter-spacing: 1px;
    border: 0;
    border-radius: 0;
    background-color: transparent;
}

.ID-card-wrapper.ID-1 {
    margin-bottom: 0.38rem;
}
.ID-card-wrapper .ID-box{
    position: relative;    
    height: 4.746rem;
}
.ID-card-wrapper.ID-1 .ID-box{
    background: url(../../images/limit/ID_1.png) no-repeat;
    background-size: 100% 100%; 
}
.ID-card-wrapper.ID-2 .ID-box{
    background: url(../../images/limit/ID_2.png) no-repeat;
    background-size: 100% 100%; 
}
.ID-box img:first-child{
    width:5.973rem;
    height:3.386rem;
    z-index: 10;
}

.ID-box img:nth-child(2),
input[name="sendpic"] {
    width:5.546rem;
    height:3.466rem;
    z-index: 11;
}            
input[name="sendpic"] {
    opacity: 0;
}
.mui-input-row{
    margin: 0.66rem 0 0.3rem;
}
.mui-checkbox.mui-left label{
    padding: 0;
}
.mui-checkbox.mui-left input[type=checkbox]{
    left:0;
    top: 0.16rem;
    line-height: 0.66rem;
}
.mui-checkbox.mui-left p{
    padding-top:0.17rem;
    padding-left:0.62rem;
    line-height: 1.6;
}
.mui-checkbox input[type=checkbox]:before {
    font-size: 0.5rem;
}
