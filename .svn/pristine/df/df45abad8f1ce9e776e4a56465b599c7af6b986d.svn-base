.btn-box {
    padding-top: 0.1rem;
}
.btn-box button.mui-btn-disabled{
    background-color: #D9DCE4;
    border-color:#D9DCE4;
}
.btn-box button{
    height:1.253rem;
    padding: 0;
    border-radius:999px;
}



.Identity-img{
    width: 5rem;
    height: 3rem;
    z-index: 3;
}

.step-box .step-hd img{
    width:4.613rem;
    height:1.893rem;
}
.step1 .step-hd{
    padding-top: 0.3rem;
    padding-bottom: 0.3rem;
}
.step2 .step-hd{
    padding-top: 0.88rem;
    padding-bottom: 0.5rem;
}



/* 侧滑 */
.mui-off-canvas-right{
    width: 100%;
    color:#666666;
    background-color: #fff;
    font-size:0.32rem;
    transition: transform 350ms cubic-bezier(.165,.84,.44,1);
}
.mui-off-canvas-right header{
    padding: 0;
    background-color: #fff;
}
.mui-off-canvas-right header .img-arrow{
    padding: 0.4rem;
}
.mui-off-canvas-right header .img-arrow img{
    width: 0.26rem;
    padding: 0;
}
.mui-off-canvas-right header h1{
    font-size: 0.48rem;
}
.mui-off-canvas-right .content{
    padding: 0 0.533rem 0.6rem;
}
.mui-off-canvas-right.mui-active{
    transform: translate3d(0px, 0px, 0px) !important;
    visibility: visible;
}

