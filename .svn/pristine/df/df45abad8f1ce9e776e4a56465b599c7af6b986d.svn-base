#offCanvasSideArea li{
    position:relative;
    height: 1.333rem;
    line-height: 1.333rem;
}
#offCanvasSideArea li.active{
    color:#367DF8;
}
#offCanvasSideArea li.active:before{
    content:'';
    position:absolute;
    left:0.44rem;
    top:32%;
    height:0.4rem;
    width:0.08rem;
    background-color:#366BFE;
}