.custom-flex {
    display: flex;
}

.custom-orange {
    color: #FF7E00;
}

.custom-black-2 {
    color: #222;
}

.page-bg {
    background-color: #F9F9FC;
}

.text-size-13 {
    font-size: 0.346rem !important;
}

.text-size-12 {
    font-size: 0.32rem;
}

.custom-light-gray {
    color: #A6A6A6;
}

.mui-table-view-cell:after,
.mui-input-group:before,
.mui-input-group:after,
.mui-table-view:before,
.mui-table-view:after {
    background-color: #f5f5f5;
}

/* 商品列表 */
.custom-card-header {
    height: 1.133rem;
    padding: 0 0.4rem;
    line-height: 1.133rem;
    font-size: 0.34rem;
    overflow: hidden;
    background-color: #fff;

}

.custom-card-item {
    margin-bottom: 0.28rem;
}

.custom-card-item li {
    padding: 0.38rem 0.4rem !important;
}

.custom-card-item .mui-table-view:before,
.custom-card-item .mui-table-view-cell:after {
    left: 0.373rem;
    right: 0.32rem;
}

.custom-card-item .mui-table-view:before {
    top: 0;
}

.custom-card-item h3 {
    width: 4.626rem;
    margin-right: 0.346rem;
}

.mui-text-right {
    position: absolute;
    right: 0;
}

.mui-text-right small.custom-light-gray {
    display: block;
    line-height: 1;
}

.custom-brand-info p {
    margin-top: 0.12rem;
}

.custom-brand-info .right-info {
    padding: 0;
    bottom: 0;
    right: 0;
    line-height: 0.72rem;
}

.custom-brand-info .mui-btn,
.custom-btn-footer .mui-btn,
.mui-bar .mui-btn {
    position: static;
    width: 1.973rem;
    height: 0.72rem;
    padding: 0;
}

.custom-btn-footer a.mui-btn {
    line-height: 0.7rem;
}

.custom-brand-info .right-info span {
    color: #F8B500;
    margin-right: 0.1rem;
}

.order-info .custom-card-content {
    padding: 0 0.346rem;
}

.order-info p {
    font-size: 0.32rem;
    margin-bottom: 0.12rem;
    line-height: 2;
}

/* ======================================================= 商品列表 ===================================================*/

.custom-list-box {
    width: 100%;
}

.custom-list-box .custom-list-pic {
    margin-right: 0.4rem;
}

.custom-list-box .custom-brand-info {
    width: calc(10rem - 4rem);
    flex: 1;
    margin-top: -0.1rem;
}

.custom-list-box .custom-brand-info h3 {
    font-size: 0.373rem;
    line-height: 1.5;
    color: #292929;
}


.custom-list-box .right-info {
    padding: 0.38rem;
    position: absolute;
    right: -0.2rem;
    bottom: -0.36rem;
}

.custom-list-box .custom-brand-info small:nth-of-type(2) {
    margin-left: 0.38rem;
}

.custom-brand-num {
    bottom: 0;
    right: 0;
    color: #8f8f94;
}



.custom-card-item .custom-list-pic {
    width: 2.4rem !important;
    height: 2.4rem;
    margin-right: 0.4rem;
}

.custom-card-item .badges-box .mui-badge {
    line-height: 1.3;
}

.custom-card-item li {
    padding: 0.38rem 0.346rem !important;
}

.custom-card-item .custom-brand-info h3+p {
    margin: 0.1rem 0;
}

.custom-card-item .custom-brand-info .badges-box {
    padding-bottom: 0.2rem;
}